{% extends 'layouts/base.njk' %}

{% set introSummary = content | safe %}

{# Post list content #}
{% set postListHeading = postsHeading %}
{% set postListItems = collections.postFeed %}

{# Posts link #}
{% if postListItems.length < collections.writing.length %}
  {% set paginationNextText = allPostsText %}
  {% set paginationNextUrl = '/writing' %}
{% endif %}

{% block intro %}
  <div class="l-stack l-stack--large">
    {% include "partials/intro.njk" %}
  </div>
{% endblock %}

{% block content %}
  <div class="l-page">
    <div class="l-stack l-stack--large">
      {% include "partials/post-list-home.njk" %}
      {% include "partials/pagination.njk" %}
      {% include "partials/services/keystone-bookmarks-list.njk" %}
    </div>
  </div>
{% endblock %}